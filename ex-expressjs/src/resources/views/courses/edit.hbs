<div class="mt-4">
  <h3>Sửa khóa học</h3>

  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class=form-group>">
      <label for="name" class="form-label">Mô tả</label>
      <input
        class="form-control"
        id="name"
        value="{{course.name}}"
        name="name"
      />
    </div>

    <div class=form-group>">
      <label for="description" class="form-label">Description</label>
      <input
        class="form-control"
        id="description"
        value="{{course.description}}"
        name="description"
      />
    </div>

    <div class=form-group>">
      <label for="videoId" class="form-label">VideoId</label>
      <input
        class="form-control"
        id="videoId"
        value="{{course.videoId}}"
        name="videoId"
      />
    </div>

    <div class=form-group>">
      <label for="level" class="form-label">Level</label>
      <input
        class="form-control"
        id="level"
        value="{{course.level}}"
        name="level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Lưu chỉnh sửa.</button>
  </form>
</div>